<?xml version="1.0" encoding="utf-8"?>
<network-security-config>

    <!-- 에뮬레이터에서 로컬 백엔드(10.0.2.2, localhost) HTTP 허용 + 커스텀 인증서 신뢰 -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">localhost</domain>
        <trust-anchors>
            <!-- raw/mycert.cer 를 두셨다면 유지 -->
            <certificates src="@raw/mycert"/>
            <certificates src="system"/>
        </trust-anchors>
    </domain-config>

    <!-- 카카오 리소스/타일 CDN: 일부 환경에서 혼합콘텐츠/리다이렉트 이슈 방지용 허용 -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">t1.daumcdn.net</domain>
        <domain includeSubdomains="true">daumcdn.net</domain>
        <domain includeSubdomains="true">kakaocdn.net</domain>
        <domain includeSubdomains="true">t1.kakaocdn.net</domain>
        <domain includeSubdomains="true">map.kakao.com</domain>
    </domain-config>

    <!-- Kakao Maps JS SDK 엔드포인트 -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">dapi.kakao.com</domain>
    </domain-config>

</network-security-config>
